.sidebar
  //- Logo
  .logo
    img(src='./assets/img/shuttle.svg', alt='Dong A')

    //- Menu
  .menu
    ul.menu-list
      //- Home
      li.menu-item(class=selectedPage == 'home' && 'active')
        a(href='/')
          i.fas.fa-home
      //- Search
      li.menu-item(class=selectedPage == 'search' && 'active')
        a(href='/search')
          i.fas.fa-search
      //- Notifications
      li.menu-item(class=selectedPage == 'notification' && 'active')
        a(href='/')
          i.fas.fa-bell
      //- Message
      li.menu-item(class=selectedPage == 'message' && 'active')
        a(href='/message')
          i.far.fa-envelope
      //- Profile
      li.menu-item.menu-item(class=selectedPage == 'profile' && 'active')
        a(href='/profile')
          i.fas.fa-user
      //- Logout
      li.menu-item.logout
        a(href='/auth/logout')
          i.fas.fa-sign-out-alt

    //- Account menu
  .account-menu
    //- avatar
    .avatar
      span.dot.activate
      img(src=userLoggedIn.profilePic, alt='avatar')
